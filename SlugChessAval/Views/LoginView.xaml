<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SlugChessAval.Views.LoginView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="48" />
      <RowDefinition Height="48" />
      <RowDefinition Height="48" />
      <RowDefinition Height="48" />
      <RowDefinition Height="48" />
      <RowDefinition Height="48" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Text="Login view" Margin="5" />
    <TextBox Grid.Row="1" Text="{Binding Username}" />
    <TextBox Grid.Row="2" PasswordChar="?"  Text="{Binding Password}" />
    <Button Grid.Row="3" Height="{Binding #a.Bounds.Width}"  Content="Login" Command="{Binding Login}" />
    <Button Grid.Row="4" Content="Back" Command="{Binding $parent[Window].Router.NavigateBack}" />
    <TextBlock Grid.Row="5" Text="PS. In current version no user exists so just write a username and random password" Foreground="LightCyan" />
  </Grid>
</UserControl>
